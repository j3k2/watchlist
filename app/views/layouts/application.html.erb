<!DOCTYPE html>
<html>
<head>
  <title>Watchlist</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
	<%= favicon_link_tag 'watchlist-logo.ico' %>
</head>
<body ng-app="watchlist">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<a class="navbar-brand" href="/#/"><img src="assets/watchlist-logo.png" class="logo"></a>
			<!-- <ul class="nav nav-pills" ng-controller="NavCtrl"> -->
			<div class="btngrp" role="group">  			  
				<a href="/#/" class="btn btn-default">Browse shows</a>
				
				<!-- <ul class="nav nav-pills"> -->
				<% if current_user %>
					<a class="btn btn-default" href="/#user/<%= current_user.id %>">
						<%= current_user.username %>
					</a>				
					<%= button_to "Sign Out", session_url, method: :delete, class: 'btn btn-default' %>
				<% else %>
					<a class="btn btn-default" href="/session/new">Log in</a>							
				<% end %>
			<!-- </ul> -->
		</div>
	</div>
	</nav>
	

	<div class="container-fluid">
		<ul>
		<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
			<div class="alert alert-danger" role="alert">

				<%= error %>
			</div>	
			<% end %>
		<% end %>
		</ul>
<%= yield %>
	</div>
	<% if current_user %>
	
		<script type="text/javascript">
		    window.currentUser = {
		        id : <%= current_user.id %>,
					username: "<%= current_user.username %>"
		    };
		</script>
				<% else %>
				<script>
					$('button#guest').on('click', function(){
						$('#user_username').val('Guest');
						$('#user_password').val('password');
						$('form#sign-in').submit();
				});
				</script>	
				<% end %>
</body>
</html>
